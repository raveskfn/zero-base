import java.util.Scanner;

public class Exam02 {
    
    public static void main(String[] args){

        int menuNum = 0;
        Scanner scanner = new Scanner(System.in);
        
        while(true) {
            System.out.println("  메뉴선택\n\n1.회원관리\n2. 과목관리\n3. 수강관리\n4. 결제관리\n5. 종료");
            menuNum = scanner.nextInt();
            switch(menuNum){
                case 1:
                    System.out.println("회원관리 메뉴를 선택했습니다.\n");
                    break;
                case 2:
                    System.out.println("과목관리 메뉴를 선택했습니다.\n");
                    break;
                case 3:
                    System.out.println("수강관리 메뉴를 선택했습니다.\n");
                    break;
                case 4:
                    System.out.println("결제관리 메뉴를 선택했습니다.\n");
                    break;
                case 5:
                    System.out.println("종료를 선택했습니다.\n");
                    break;
                default:
                System.out.println("잘못 입력하셨습니다.\n");
            }
            if(menuNum == 5){
                break;
            }
        }
    }
}
